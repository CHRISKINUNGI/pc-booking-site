<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available PCs</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 800px;
            margin-top: 50px;
        }
        .header {
            text-align: center;
            margin-bottom: 50px;
        }
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            border-bottom: none;
            background-color: #007bff;
            color: white;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .list-group-item {
            border: none;
            border-bottom: 1px solid #eee;
        }
        .list-group-item:last-child {
            border-bottom: none;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .form-control {
            border-radius: 20px;
        }
        .mb-4, .mt-5 {
            margin-bottom: 1.5rem !important;
            margin-top: 3rem !important;
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('partials/navbar', { user: user }) %>
        <div class="header">
            <h1>Available PCs</h1>
            <% if (user) { %>
                <div class="alert alert-info" role="alert">
                    ðŸ‘‹ Welcome, <%= user.username %>! Here are the available PCs.
                </div>
            <% } %>
        </div>
        
        <div class="card">
            <div class="card-header">
                Available PCs
            </div>
            <% if (availablePCs.length > 0) { %>
                <h2 class="mb-4">Available PCs</h2>
                <ul class="list-group mb-4">
                    <% availablePCs.forEach((pc, index) => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><%= pc.name %></span>
                            <form action="/book" method="POST" class="mb-0 d-flex">
                                <input type="hidden" name="pcIndex" value="<%= availablePCs.indexOf(pc) %>">
                                <input type="number" name="bookingTime" placeholder="Minutes" class="form-control mr-2" required>
                                <button type="submit" class="btn btn-primary btn-sm">Book</button>
                            </form>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No PCs available at the moment.</p>
            <% } %>
        </div>

        <h2 class="mt-5 mb-4">Booked PCs</h2>
        <% if (bookedPCs.length > 0) { %>
            <ul class="list-group">
                <% bookedPCs.forEach(pc => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= pc.name %></span>
                        <span><%= new Date(pc.bookedUntil).toLocaleString() %></span>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No PCs are currently booked.</p>
        <% } %>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
